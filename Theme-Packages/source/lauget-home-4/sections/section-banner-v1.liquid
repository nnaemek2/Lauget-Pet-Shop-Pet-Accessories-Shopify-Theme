<div data-section-id="{{ section.id }}" data-section-type="section-banner-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v1 mt-all">
    <div class="container container-v2">
      <div class="text-center" style="margin-bottom: 3rem;">
        {% if section.settings.sub_banner1 != blank %}
        <p class="sub-title" style="color: {{section.settings.color_sub2}}">{{section.settings.sub_banner1}}</p>
        {% endif %}
        {% if section.settings.title_banner1 != blank %}
        <h3 class="title " style="color: {{section.settings.color_title2}}" >{{section.settings.title_banner1}}</h3>
        {% endif %}
      </div>
      <div class="row">      
        <div class="col-lg-4 col-md-4 p-0">
          <div class="banner-ver">
            <div class="banner-item">
              <div class="box-image d-block">
                {% if section.settings.banner_img1 != blank %}
                <img loading="lazy" width="" height="" data-src="{{ section.settings.banner_img1 | image_url }}" class="lazyload img-fluid w-100" alt="_img_banner_">
                {% else %}
                <img loading="lazy" width="" height="" data-src="https://via.placeholder.com/600x723" class="lazyload img-fluid w-100" alt="_img_banner_">
                {% endif %}
              </div>
              <div class="content">             
                <div class="info">
                  {% if section.settings.button_banner1 != blank %}
                  <a href="{{section.settings.url_button_banner1}}" class="title-banner title-banner-{{ section.id }} ">{{section.settings.button_banner1}}</a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>    
        <div class="col-lg-4 col-md-4 p-0">
          <div class="banner-ver">
            <div class="banner-item">
              <div class="box-image d-block">
                {% if section.settings.banner_img2 != blank %}
                <img loading="lazy" width="" height="" data-src="{{ section.settings.banner_img2 | image_url }}" class="lazyload img-fluid w-100" alt="_img_banner_">
                {% else %}
                <img loading="lazy" width="" height="" data-src="https://via.placeholder.com/600x723" class="lazyload img-fluid w-100" alt="_img_banner_">
                {% endif %}
              </div>
              <div class="content">
                <div class="info">
                  {% if section.settings.button_banner2 != blank %}
                  <a href="{{section.settings.url_button_banner2}}" class="title-banner title-banner-{{ section.id }} ">{{section.settings.button_banner2}}</a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>    
        <div class="col-lg-4 col-md-4 p-0">
          <div class="banner-ver">
            <div class="banner-item">
              <div class="box-image d-block">
                {% if section.settings.banner_img3 != blank %}
                <img loading="lazy" width="" height="" data-src="{{ section.settings.banner_img3 | image_url }}" class="lazyload img-fluid w-100" alt="_img_banner_">
                {% else %}
                <img loading="lazy" width="" height="" data-src="https://via.placeholder.com/600x723" class="lazyload img-fluid w-100" alt="_img_banner_">
                {% endif %}
              </div>
              <div class="content">
                <div class="info">
                  {% if section.settings.button_banner3 != blank %}
                  <a href="{{section.settings.url_button_banner3}}" class="title-banner title-banner-{{ section.id }}">{{section.settings.button_banner3}}</a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .section-banner-v1 .banner-item .content .title-banner-{{ section.id }} {
    color: {{section.settings.color_btn}};
  }
  .section-banner-v1 .banner-item .content .title-banner-{{ section.id }}:hover {
    color: {{section.settings.color_btn_hover}};
  }
</style>

