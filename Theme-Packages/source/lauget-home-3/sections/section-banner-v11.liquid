<div data-section-id="{{ section.id }}" data-section-type="section-banner-v11" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v11 " style="margin: 0 auto;">
    <div class="container container-full {% if section.settings.ena_container %}container container-v3{% endif %} " >
      <div class="row">
        <div class="col-lg-6 banner ">
          <div class="box-image">
            {% if section.settings.img_banner1 != blank %}
            <img loading="lazy" width="" height="" data-src="{{ section.settings.img_banner1 | image_url }}" class="lazyload img-fluid w-100" alt="_img_banner_">
            {% else %}
            <img loading="lazy" width="" height="" data-src="https://via.placeholder.com/906x524" class="lazyload img-fluid w-100" alt="_img_banner_">
            {% endif %}
          </div>
          <div class="content-banner">
              {% if section.settings.title_banner != blank %}
              <h3 class="title-banner " style="color: {{section.settings.color_title}}" >{{section.settings.title_banner}}</h3>
              {% endif %}
          
              {% if section.settings.button_banner != blank %}
              <a href="{{section.settings.url_banner}}" class="button-shop button-shop-{{ section.id }}" title="">{{section.settings.button_banner}}</a>
              {% endif %}
          </div>
        </div>
        <div class="col-lg-6 banner ">
          <div class="box-image">
            {% if section.settings.img_banner2 != blank %}
            <img loading="lazy" width="" height="" data-src="{{ section.settings.img_banner2 | image_url }}" class="lazyload img-fluid w-100" alt="_img_banner_">
            {% else %}
            <img loading="lazy" width="" height="" data-src="https://via.placeholder.com/906x524" class="lazyload img-fluid w-100" alt="_img_banner_">
            {% endif %}
          </div>
          <div class="content-banner">
              {% if section.settings.title_banner2 != blank %}
              <h3 class="title-banner " style="color: {{section.settings.color_title}}" >{{section.settings.title_banner2}}</h3>
              {% endif %}

              {% if section.settings.button_banner != blank %}
              <a href="{{section.settings.url_banner2}}" class="button-shop button-shop-{{ section.id }}" title="">{{section.settings.button_banner}}</a>
              {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>

  .section-banner-v11 .banner .content-banner .button-shop-{{ section.id }} {
    color: {{section.settings.color_btn}};
  }
  .section-banner-v11 .banner .content-banner .button-shop-{{ section.id }}:hover {
    color: {{section.settings.color_btn_hover}};
  }
  .section-banner-v11 .banner .content-banner .button-shop::before {
    background: {{section.settings.color_btn}};
  }
  .section-banner-v11 .banner .content-banner .button-shop:hover::before {
    background: {{section.settings.color_btn_hover}};
  }
</style>

