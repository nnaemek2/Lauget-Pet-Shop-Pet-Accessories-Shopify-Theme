<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
{% for block in section.blocks %}
{% if block.type == "slideshow" %}
  {% if block.settings.fonts_sub_1 !=blank %}
  <link href="https://fonts.googleapis.com/css2?family={{block.settings.fonts_sub_1}}:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
  {% endif %}
  {% if block.settings.fonts_button !=blank %}
  <link href="https://fonts.googleapis.com/css2?family={{block.settings.fonts_button}}:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
  {% endif %}
  {% if block.settings.fonts_title_top !=blank %}
  <link href="https://fonts.googleapis.com/css2?family={{block.settings.fonts_title_top}}:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
  {% endif %}
{% endif %}
{% endfor %}

<div data-section-id="{{ section.id }}" data-section-type="section-slideshow-v5" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-slideshow-v5">
    <div class="container container-v1">
      <div class="row">
        <div class="col-lg-8">
          <div class="js-slide-item5 p-0">
            {% if section.blocks.size > 0 %} 
            {% for block in section.blocks %}
            {% if block.type == "slide" %}
            <div class="slide-item">
              <div class="slider-image">
                {% if block.settings.img_slider != blank %}
                <img src="{{block.settings.img_slider | img_url: "master"}}" alt="" class="lazyload img-fluid w-100">
                {% else %}
                <img src="//via.placeholder.com/939x589" alt="">
                {% endif %}
              </div>
              <div class="slider-content">
                {% if block.settings.slider_title != blank %}
                <h3 class="slider-title title-{{block.id}}">{{block.settings.slider_title}}</h3>
                {% endif %}
                {% if block.settings.slider_sub_title != blank %}
                <p class="mb-0 sub-title sub-title-{{block.id}}">{{block.settings.slider_sub_title}}</p>
                {% endif %}
                <div class="box-button">
                  {% if block.settings.slider_button != blank %}
                  <a href="{{block.settings.button_url}}" class="button-main2 button-shop-{{block.id}}" style="">{{block.settings.slider_button}}</a>
                  {% endif %}
                </div>
              </div>
            </div>
            {% endif %}
            {% endfor %}
            {% endif %}
          </div>
        </div>
        <div class="col-lg-4">
          <div class="row">
            <div class="col-12 col_12_slider">
              <div class="slider-banner slider-banner1">
                <div class="img-banner">
                  {% if section.settings.img_banner1 != blank %}
                  <img src="{{section.settings.img_banner1 | img_url: "master"}}" alt="" class="lazyload img-fluid w-100">
                  {% else %}
                  <img src="//via.placeholder.com/455x589" alt="">
                  {% endif %}
                </div>
                <div class="info-banner">
                  <div class="info">         
                    {% if section.settings.subtitle_banner1 != blank %}
                    <div class="sub_top_14">{{section.settings.subtitle_banner1}}</div>
                    {% endif %} 
                    {% if section.settings.title_banner1 != blank %}
                    <h3 class="title">{{section.settings.title_banner1}}</h3>
                    {% endif %}  
                    {% if section.settings.btn_banner1 != blank %}
                    <a href="{{section.settings.url_banner1}}" class="button-main1">{{section.settings.btn_banner1}}</a>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  .section-slideshow-v5 {
    {% if section.settings.bg_section != blank %}
    background-image : url({{section.settings.bg_section|img_url : 'master'}});
    {% else %}background-image : url(//via.placeholder.com/1920x800);
    {% endif %}
    background-size:cover;
    background-repeat:no-repeat;
    background-position:center;
  }
  
  {% for block in section.blocks %}
  {% if block.type == 'slide' %}
  .section-slideshow-v5 .slide-item.slick-active .slider-content .title-{{block.id}}{
    color: {{block.settings.title_color}};
    {% if block.settings.fonts_title_top != blank %}
    font-family: '{{block.settings.fonts_title_top}}';
      {% endif %}
  }
  
  .section-slideshow-v5 .slide-item.slick-active .slider-content .sub-title-{{block.id}}{
    color: {{block.settings.sub_title_color}};
    {% if block.settings.fonts_sub_1 != blank %}
    font-family: '{{block.settings.fonts_sub_1}}';
      {% endif %}
  }
  
  .section-slideshow-v5 .slide-item .slider-content .box-button .button-shop-{{block.id}} {
  	color:{{block.settings.color_button}};
    background:{{block.settings.bg_color_button}};
    {% if block.settings.fonts_button != blank %}
    font-family: '{{block.settings.fonts_button}}';
      {% endif %}
  }
  .section-slideshow-v5 .slide-item .slider-content .box-button .button-shop-{{block.id}}:hover {
    color: {{block.settings.color_button_hover}}!important;
    background: {{block.settings.bg_color_button_hover}}!important;
  }
  
  @media(min-width:1900px){
    .section-slideshow-v5 .slide-item.slick-active .slider-content .title-{{block.id}}{
      font-size:{{block.settings.font_size_title_top}}px;
    }

    .section-slideshow-v5 .slide-item.slick-active .slider-content .sub-title-{{block.id}}{
      font-size:{{block.settings.font_size_top1}}px;
    }

    .section-slideshow-v5 .slide-item .slider-content .box-button .button-shop-{{block.id}} {
      font-size:{{block.settings.font_size_button}}px;
    }
  }
  
  {% endif %}
  {% endfor %}
</style>
