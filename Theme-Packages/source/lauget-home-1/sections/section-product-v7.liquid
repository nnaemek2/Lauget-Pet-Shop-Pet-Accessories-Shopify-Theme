<div data-section-id="{{ section.id }}" data-section-type="section-product-v7" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="section-product-v7">
    <div class="container container-full">
      <div class="row mini-content align-items-center">

        <div class="col-lg-4 col-md-12 text-center p-0 {% if section.settings.section_layout == "banner_left" %}col-lg-4 col-md-12 p-0 order-1{% elsif section.settings.section_layout == "banner_right" %} order-2 col-md-12 p-0 col-lg-4 {% endif %}">
          <div class="banner">
            <a href="" class="adv-thumb-link">
              {% if section.settings.banner_img != blank %}
              <img src="{{section.settings.banner_img | img_url:'master'}}" alt="banner" class=" w-100 img-fluid">
              {% else %}
              <img src="//via.placeholder.com/589x656" class=" w-100 img-fluid" alt="">
              {% endif %}
            </a>
          </div>
        </div>
        <div class="col-lg-8 col-md-12 {% if section.settings.section_layout == "banner_left" %}col-lg-8 col-md-12 text-left order-2 mt-3 mt-sm-0 {% elsif section.settings.section_layout == "banner_right" %}box-textalign text-right order-1 col-md-12 col-lg-8 mb-5 mb-sm-0 {% endif %}">

          {% assign products_limit1 = section.settings.products_limit1 %}
          {% assign col1 = section.settings.select_collection1 %} 
            <div class="product-list">
              <div class="section-title"> 
               <h3 class="title_heading2 mb-0">
                  <span class="title">{{section.settings.block_title1}}</span>
                </h3>
                <div class="button-banner">
                  {% if section.settings.button_banner != blank %}
                  <a href="{{section.settings.url_button}}" class="button button-{{ section.id }}">{{section.settings.button_banner}}</a>
                  {% endif %}
                </div> 
              </div>

              <div class="product-list-grid js_section_product7">
                {% assign products_limit1 = section.settings.products_limit1 %}
                {% assign col = section.settings.select_collection %}
                {% for product in collections[col1].products limit: products_limit1 %}
                <div class="col-md-4 col-12 product_item">
                  {% include 'product-item-v1' %}
                </div>
                {% else %}
                {% for i in (1..products_limit1) %}
                <div class="col-md-4 col-12 product_item">
                  {% include 'empty-product-item' %}
                </div>
                {% endfor %}
                {% endfor %}
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  .section-product-v7 .section-title .button-banner .button-{{ section.id }} {
    color: {{section.settings.color_btn}};
  }
</style>

{% schema %}
{
  "name": "PRODUCT V7",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "select",
      "id": "section_layout",
      "label": "Section Layout",
      "options": [
        {
          "value": "banner_left",
          "label": "Banner Left"
        },
        {
          "value": "banner_right",
          "label": "Banner Right"
        }
      ],
      "default": "banner_left"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "header",
      "content": "Product "
    },
    {
      "type": "text",
      "id": "block_title1",
      "label": "Title",
      "default": "FEATURED PRODUCTS"
    },
    {
      "type": "text",
      "id": "button_banner",
      "label": "Button Label",
      "default": "VIEW ALL"
    },
    {
      "type": "color",
      "id": "color_btn",
      "label": "Color button ",
      "default": "#f9af8f"
    },
    {
      "type": "url",
      "id": "url_button",
      "label": "URL Banner  ",
      "default": "/collections/all"
    },
    {
      "type": "collection",
      "id": "select_collection1",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "products_limit1",
      "label": "Limit products",
      "min": 1,
      "max": 50,
      "step": 1,
      "default": 3
    },
    {
      "type": "header",
      "content": "Banner Image"
    },
    {
      "type": "image_picker",
      "id": "banner_img",
      "info": "370 x 463px recommended",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "PRODUCT V7",
      "category": "HOME"
    }
  ]
}
{% endschema %}


